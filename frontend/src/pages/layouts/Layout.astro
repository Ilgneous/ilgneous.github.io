---
import "../../styles/global.css";
const { title = "Sivan Syed", B = import.meta.env.BASE_URL } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <link rel="icon" href={`${B}favicon.svg`} />
  </head>
  <body class="mx-auto max-w-3xl p-6">
    <slot />
  </body>
</html>