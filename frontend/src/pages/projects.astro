---
const projects = await fetch(import.meta.env.PUBLIC_API_URL ?? "https://api.example.com/api/projects")
  .then(r => r.ok ? r.json() : [])
  .catch(() => []);
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Projects</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="mx-auto max-w-3xl p-6">
    <h1 class="text-3xl font-bold mb-4">Projects</h1>
    <div class="grid gap-4">
      {projects.map((p) => (
        <article class="rounded-2xl border p-4">
          <h2 class="text-lg font-semibold">{p.title}</h2>
          <p class="mt-1 opacity-90">{p.blurb}</p>
          {p.tech && <p class="mt-1 text-sm opacity-70">{p.tech.join(" â€¢ ")}</p>}
        </article>
      ))}
    </div>
  </body>
</html>
