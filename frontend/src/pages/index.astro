---
// src/pages/tutoring.astro ‚Äî mobile‚Äëfirst, accessible, and responsive
import "../styles/global.css";

const B = import.meta.env.BASE_URL;
const page = {
  title: "Tutoring | Sivan Syed",
  description:
    "1:1 tutoring in ECE, Physics, Math, and MechE. Concept‚Äëfirst coaching, problem‚Äëdriven practice, and project guidance.",
};
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <title>{page.title}</title>
    <meta name="description" content={page.description} />
    <link rel="icon" href={`${B}favicon.svg`} />
    <style>
      @media (prefers-reduced-motion: reduce) { .animate-shimmer { animation: none !important; } }
    </style>
  </head>
  <body class="min-h-screen overflow-x-hidden bg-gradient-to-b from-black via-zinc-950 to-black text-zinc-100 antialiased selection:bg-indigo-500/20 [padding-top:env(safe-area-inset-top)]">
    <a href="#main" class="sr-only focus:not-sr-only focus:fixed focus:left-3 focus:top-3 focus:z-[100] focus:rounded-md focus:bg-zinc-900 focus:px-3 focus:py-2 focus:outline-none">Skip to content</a>

    {/* Decorative background */}
    <div aria-hidden class="pointer-events-none fixed inset-0 -z-20">
      <div class="absolute inset-0 [mask-image:radial-gradient(70%_50%_at_50%_0%,black,transparent)]">
        <div class="absolute inset-0 opacity-[0.04] [background-image:linear-gradient(to_right,theme(colors.zinc.400/20)_1px,transparent_1px),linear-gradient(to_bottom,theme(colors.zinc.400/20)_1px,transparent_1px)] [background-size:32px_32px] sm:[background-size:40px_40px] [background-position:center]"></div>
        <div class="absolute -top-24 left-1/2 h-[26rem] w-[48rem] -translate-x-1/2 rounded-full bg-gradient-to-r from-zinc-200/10 via-indigo-400/15 to-zinc-200/10 blur-3xl md:h-[36rem] md:w-[72rem]"></div>
      </div>
    </div>

    {/* Header with mobile menu */}
    <header class="sticky top-0 z-50 border-b border-zinc-800/60 backdrop-blur supports-[backdrop-filter]:bg-zinc-950/55">
      <div class="mx-auto flex max-w-7xl items-center justify-between gap-4 px-4 sm:px-6 md:px-12 lg:px-20 py-3 sm:py-4">
        <a href={`${B}`} class="group flex min-w-0 items-center gap-3">
          <img src={`${B}favicon.svg`} alt="Logo" class="size-9 flex-shrink-0 transition-transform duration-300 group-hover:rotate-6" />
          <div class="min-w-0">
            <h1 class="truncate text-xl font-semibold tracking-tight sm:text-2xl">Sivan Syed</h1>
            <p class="truncate text-[11px] text-zinc-400 sm:text-xs">Physics & ECE ‚Ä¢ Robotics ‚Ä¢ Controls ‚Ä¢ Systems</p>
          </div>
        </a>

        {/* Desktop nav */}
        <nav class="hidden items-center gap-2 text-sm md:flex">
          <a class="navlink" href={`${B}`}>Home</a>
          <a class="navlink" href={`${B}projects`}>Projects</a>
          <a class="navlink" href={`${B}tutoring`}>Tutoring</a>
          <a class="navlink" href={`/SyedS_ResumeELC_Print.pdf`} target="_blank" rel="noopener noreferrer">Resume</a>
        </nav>

        {/* Mobile menu toggle */}
        <button id="mobile-nav-toggle" aria-controls="mobile-menu" aria-expanded="false" class="inline-flex items-center justify-center rounded-lg border border-zinc-800/60 bg-zinc-900/40 p-2 md:hidden" title="Open menu">
          <span class="sr-only">Open navigation</span>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-5 w-5"><path d="M3.75 6.75h16.5M3.75 12h16.5M3.75 17.25h16.5"/></svg>
        </button>
      </div>

      {/* Mobile sheet */}
      <div id="mobile-menu" hidden class="md:hidden">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 md:px-12 lg:px-20 pb-3">
          <nav class="grid gap-1 text-sm">
            <a class="navlink w-full" href={`${B}`}>Home</a>
            <a class="navlink w-full" href={`${B}projects`}>Projects</a>
            <a class="navlink w-full" href={`${B}tutoring`}>Tutoring</a>
            <a class="navlink w-full" href={`/SyedS_ResumeELC_Print.pdf`} target="_blank" rel="noopener noreferrer">Resume</a>
          </nav>
        </div>
      </div>
    </header>

    {/* Main container */}
    <main id="main" class="mx-auto max-w-[90rem] px-4 sm:px-6 md:px-12 lg:px-20 py-8 sm:py-10 md:py-14 space-y-16 sm:space-y-20 md:space-y-24 scroll-mt-20">
      {/* Hero */}
      <section class="mx-auto max-w-6xl">
        <p class="text-[11px] uppercase tracking-[0.2em] text-zinc-400/90 sm:text-xs">1:1 Tutoring ‚Ä¢ ECE ‚Ä¢ Physics ‚Ä¢ Math ‚Ä¢ MechE</p>
        <h2 class="mt-2 text-3xl font-bold leading-tight sm:text-4xl md:text-5xl">
          <span class="bg-gradient-to-r from-zinc-100 via-zinc-400 to-zinc-100 bg-clip-text text-transparent [text-shadow:0_0_0.5px_rgba(255,255,255,0.35)] animate-shimmer">Master tough concepts</span>
          <span class="block text-zinc-300/90">with personalized, student‚Äëdriven tutoring</span>
        </h2>
        <p class="mt-3 max-w-3xl text-base text-zinc-300/90 sm:mt-4 sm:text-lg">
          I help students build intuition, pass exams, and excel beyond the classroom. Sessions are customized to your goals,
          paced to you, and focused on problem‚Äësolving.
        </p>
        <div class="mt-5 flex flex-wrap gap-3 text-sm sm:mt-6">
          <a href="#book" class="btn-primary">Book a free intro</a>
          <a href="#contact" class="btn-ghost">Ask a question</a>
        </div>
        <div class="mt-4 flex flex-wrap items-center gap-3 text-sm text-zinc-400/90">
          <span>üïí 60‚Äì90 min</span>
          <span class="opacity-50">‚Ä¢</span>
          <span>üåê Remote (Zoom) + Austin</span>
          <span class="opacity-50">‚Ä¢</span>
          <span>üìö Undergrad & advanced HS</span>
        </div>
      </section>

      <hr class="section-divider-glow" />

      {/* What I tutor */}
      <section class="section">
        <h3 class="section-title">What I tutor</h3>
        <div class="mt-5 grid grid-cols-1 gap-4 sm:mt-6 sm:gap-6 sm:grid-cols-2">
          {[
            {
              h: "Electrical & Computer Engineering",
              p: "Circuits ¬∑ Signals ¬∑ Digital Design ¬∑ Embedded",
              items: [
                "Circuits I/II, MOSFET/BJT modeling",
                "Signals & Systems, DSP, controls basics",
                "Verilog/VHDL, FPGAs, synthesis & timing",
                "Embedded C/C++, Python, microcontrollers",
              ],
            },
            {
              h: "Physics",
              p: "Mechanics ¬∑ E&M ¬∑ Quantum ¬∑ Solid State ¬∑ AMO",
              items: [
                "Classical mechanics, oscillations, Lagrangians",
                "Electrostatics, Maxwell links to circuits",
                "Quantum I/II, perturbation, spin",
                "Semiconductors, band diagrams, devices",
              ],
            },
            {
              h: "Math Foundations",
              p: "Calc ¬∑ Linear Algebra ¬∑ Probability ¬∑ Diff Eq",
              items: [
                "Calculus, multivariable, vector calculus",
                "Linear algebra and numerical methods",
                "Probability, random variables, statistics",
                "ODEs/PDEs for engineers & physicists",
              ],
            },
            {
              h: "Mechanical Engineering",
              p: "Statics ¬∑ Dynamics ¬∑ Thermodynamics ¬∑ Fluid Mechanics",
              items: [
                "Statics: forces, moments, equilibrium",
                "Dynamics: kinematics, Newton's laws",
                "Thermodynamics: laws, cycles, efficiency",
                "Fluid Mechanics: properties, forces, flow",
              ],
            },
          ].map((card) => (
            <div class="card group hover:-translate-y-0.5">
              <div class="card-border"></div>
              <h4 class="font-medium text-lg">{card.h}</h4>
              <p class="mt-1 text-sm text-zinc-400">{card.p}</p>
              <ul class="mt-3 list-disc space-y-1 pl-5 text-sm text-zinc-300">
                {card.items.map((li) => (<li>{li}</li>))}
              </ul>
            </div>
          ))}
        </div>
      </section>

      <hr class="section-divider-glow" />

      {/* Method & Outcomes */}
      <section class="section grid grid-cols-1 gap-4 sm:gap-6 sm:grid-cols-2">
        <div class="card">
          <div class="card-border"></div>
          <h3 class="text-xl font-semibold">How sessions work</h3>
          <ul class="mt-3 space-y-2 text-sm text-zinc-300">
            <li>Quick diagnostic ‚Üí goals & plan</li>
            <li>Concept first ‚Üí problem‚Äëdriven practice</li>
            <li>Visuals, derivations, real exam‚Äëstyle questions</li>
            <li>Actionable study plan + follow‚Äëup notes</li>
          </ul>
        </div>
        <div class="card">
          <div class="card-border"></div>
          <h3 class="text-xl font-semibold">What you get</h3>
          <ul class="mt-3 space-y-2 text-sm text-zinc-300">
            <li>Improved exam performance and confidence</li>
            <li>Clean write‚Äëups, diagrams, and code snippets</li>
            <li>Project guidance for labs & portfolios</li>
          </ul>
        </div>
      </section>

      <hr class="section-divider-glow" />

      {/* KPIs */}
      <section class="section grid grid-cols-2 gap-3 sm:gap-4 sm:grid-cols-3">
        {[
          { n: "+200", t: "problems worked" },
          { n: "24‚Äì48h", t: "typical availability" },
          { n: "1:1", t: "personalized plan" },
        ].map((k) => (
          <div class="kpi">
            <div class="kpi-ring"></div>
            <div class="text-lg font-semibold tracking-tight">{k.n}</div>
            <div class="text-xs text-zinc-400">{k.t}</div>
          </div>
        ))}
      </section>

      <hr class="section-divider-glow" />

      {/* Pricing */}
      <section class="section" id="pricing">
        <h3 class="section-title">Pricing</h3>
        <div class="mt-5 grid grid-cols-1 gap-4 sm:mt-6 sm:gap-6">
          <div class="card">
            <div class="card-border"></div>
            <div class="flex flex-wrap items-baseline justify-between gap-2">
              <h4 class="font-medium">Single Session</h4>
              <span class="text-xs text-indigo-300/80">$60/hr</span>
            </div>
            <ul class="mt-3 space-y-1 text-sm text-zinc-300">
              <li>60 or 90 minutes</li>
              <li>Shared notes & practice set</li>
              <li>Email/DM follow‚Äëups</li>
            </ul>
          </div>
        </div>
        <p class="mt-2 text-sm text-zinc-400">Group sessions and ongoing semester plans available on request.</p>
      </section>

      <hr class="section-divider-glow" />

      {/* Booking (Calendly) */}
      <section class="section" id="book">
        <h3 class="section-title">Book a free 15‚Äëmin intro</h3>
        <p class="mt-2 text-sm text-zinc-400">Use the widget below to grab a time. Prefer email? See the contact form.</p>
        <div class="mt-5 overflow-hidden rounded-2xl border border-zinc-800/70 bg-zinc-900/30 shadow-[inset_0_1px_0_0_rgba(255,255,255,0.05)]">
          <div class="relative pt-[140%] sm:pt-[90%] md:pt-[56.25%]">
            <iframe
              title="Schedule a call"
              src="https://calendly.com/sivan-syed/30min"
              class="absolute inset-0 h-full w-full"
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
            ></iframe>
          </div>
        </div>
      </section>

      <hr class="section-divider-glow" />

      {/* FAQ */}
      <section class="section">
        <h3 class="section-title">FAQ</h3>
        <div class="mt-5 space-y-3">
          {[
            ["Do you meet in person?", "Yes, near UT campus in Austin. Otherwise, Zoom with a collaborative whiteboard."],
            ["What should I bring?", "Syllabus, past exams or homework, and your notes. Topics ahead of time (24hr) help me prepare targeted problems."],
            ["What's your cancellation policy?", "Free reschedule/cancel up to 12 hours before the session."],
            ["Do you tutor full project builds?", "Yes‚Äîscoping, design review, implementation tips, debugging, and write‚Äëups. I guide; you own the work."],
          ].map(([q, a]) => (
            <details class="faq">
              <summary class="cursor-pointer select-none font-medium transition-colors duration-300 open:text-zinc-100">{q}</summary>
              <p class="mt-2 text-sm text-zinc-300/95">{a}</p>
            </details>
          ))}
        </div>
      </section>

      <hr class="section-divider-glow" />

      {/* Contact */}
      <section class="section" id="contact">
        <h3 class="section-title">Contact</h3>
        <div class="mt-5 grid grid-cols-1 gap-4 sm:mt-6 sm:gap-6 sm:grid-cols-2">
          <form class="card" action="https://formspree.io/f/xeovqoop" method="POST">
            <div class="card-border"></div>
            <div class="grid gap-3">
              <input class="input" type="text" name="name" placeholder="Your name" required />
              <input class="input" type="email" name="email" placeholder="Email" required />
              <select class="input" name="topic" aria-label="Topic">
                <option value="General">General</option>
                <option value="ECE">ECE</option>
                <option value="Physics">Physics</option>
                <option value="Math">Math</option>
                <option value="Mechanical Engineering">Mechanical Engineering</option>
              </select>
              <textarea class="input min-h-28" name="message" rows="5" placeholder="What would you like help with?" required></textarea>
              <input type="text" name="_gotcha" class="hidden" tabindex="-1" autocomplete="off" />
              <button class="btn-primary" type="submit">Send message</button>
              <p class="text-sm text-zinc-400">Or email: <a class="underline decoration-indigo-400/30 underline-offset-2 hover:decoration-indigo-400/60" href="mailto:sivan.syed@gmail.com">sivan.syed@gmail.com</a></p>
            </div>
          </form>
          <div class="card">
            <div class="card-border"></div>
            <h4 class="font-medium">Availability</h4>
            <p class="mt-2 text-sm text-zinc-300">Most weekdays after 6pm CT, weekends 10am‚Äì10pm. Need something urgent? Often available within 24‚Äì48h.</p>
            <h4 class="mt-4 font-medium">Policies</h4>
            <ul class="mt-2 list-disc space-y-1 pl-5 text-sm text-zinc-300">
              <li>Homework integrity: I'll guide you to solutions, not do the assignment for you.</li>
              <li>Academic honesty: No live exam assistance.</li>
              <li>Accessibility: Materials available in alternative formats upon request.</li>
            </ul>
          </div>
        </div>
      </section>
    </main>

    <footer class="mx-auto max-w-7xl px-4 sm:px-6 md:px-12 lg:px-20 pb-10 pt-6 text-sm text-zinc-500/90">
      <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between border-t border-zinc-800/70 pt-4">
        <p>¬© {new Date().getFullYear()} Sivan Syed</p>
        <a class="underline decoration-zinc-400/30 underline-offset-2 hover:decoration-zinc-200/60" href={`${B}`}>Back to home</a>
      </div>
    </footer>

    {/* Tiny client script for mobile nav */}
    <script is:inline>
      const btn = document.getElementById('mobile-nav-toggle');
      const menu = document.getElementById('mobile-menu');
      if (btn && menu) {
        btn.addEventListener('click', () => {
          const open = btn.getAttribute('aria-expanded') === 'true';
          btn.setAttribute('aria-expanded', String(!open));
          menu.hidden = open;
          btn.innerHTML = !open
            ? `<span class="sr-only">Close navigation</span><svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='currentColor' class='h-5 w-5'><path d='M6.75 6.75l10.5 10.5M17.25 6.75L6.75 17.25'/></svg>`
            : `<span class="sr-only">Open navigation</span><svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='currentColor' class='h-5 w-5'><path d='M3.75 6.75h16.5M3.75 12h16.5M3.75 17.25h16.5'/></svg>`;
        });
      }

      // Smooth in‚Äëpage scroll (respects reduced motion)
      document.addEventListener('click', (event) => {
        const target = event.target;
        if (!(target instanceof Element)) return;
        const a = target.closest('a[href^="#"]');
        if (!a) return;
        const href = a.getAttribute('href');
        if (!href) return;
        const el = document.querySelector(href);
        if (!el) return;
        event.preventDefault();
        const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
        el.scrollIntoView({ behavior: prefersReduced ? 'auto' : 'smooth', block: 'start' });
      });
    </script>
  </body>
</html>
