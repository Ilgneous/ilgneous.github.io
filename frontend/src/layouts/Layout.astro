---
import "../styles/global.css";           // global css (Tailwind v4)
const { title = "Sivan Syed", B = import.meta.env.BASE_URL } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <link rel="icon" href={`${B}favicon.svg`} />
  </head>
  <body class="min-h-screen bg-white text-zinc-900 dark:bg-zinc-950 dark:text-zinc-100 antialiased">
    <main class="mx-auto max-w-3xl p-6">
      <slot />
    </main>
  </body>
</html>